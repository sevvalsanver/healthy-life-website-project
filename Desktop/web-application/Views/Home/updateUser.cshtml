            @Html.ValidationMessageFor(k => k.tel, null,
                new { @class = "text-danger" })

            <br />
            <input type="submit" value="Kaydı Güncelle" class="btn btn-success" />
            if (ViewBag.sonuc != null)
            {
                <div class="alert alert-success">@ViewBag.sonuc</div>
            }

        }
    </div>
</div>



