@model web_project.ViewModel.userModel
@{
    ViewBag.Title = "updateUser";
}

<h2>Kullanıcı Kaydını Düzenle</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("updateUser", "Home", FormMethod.Post))
        {
